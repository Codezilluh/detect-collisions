{
  "name": "detect-collisions",
  "version": "3.0.10",
  "description": "2d collision detection for circles, polygons, and points (with SAT and BVH)",
  "main": "dist/index.js",
  "types": "out/index.d.ts",
  "scripts": {
    "compile": "rm -rf out && tsc",
    "build": "rm -rf dist && yarn compile && babel out --out-dir dist --presets es2015 && prettier --write dist",
    "build:demo": "yarn build && webpack && cp src/index.html dist/demo",
    "build:docs": "rm -rf docs && yarn build:demo && jsdoc -c .jsdoc.json && yarn docs:postbuild",
    "docs:postbuild": "mv docs/$npm_package_name/$npm_package_version/* docs && rm -rf docs/$npm_package_name && cp dist/demo -r docs",
    "docs": "yarn build:docs && bouncer.js docs",
    "demo": "yarn build:demo && bouncer.js dist/demo",
    "test": "yarn build && jest --silent --verbose",
    "format": "prettier --write ./src",
    "precommit": "yarn test && yarn format && yarn build:docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Prozi/detect-collisions.git"
  },
  "keywords": [
    "Collisions",
    "Separating Axis Theorem",
    "Bounding Volume Hierarchy",
    "SAT",
    "BVH",
    "Circle",
    "Polygon",
    "Line",
    "Shape",
    "Separating",
    "Axis",
    "Theorem",
    "Bounding",
    "Volume",
    "Hierarchy"
  ],
  "author": "Samuel Hodge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Prozi/detect-collisions/issues"
  },
  "homepage": "https://github.com/Prozi/detect-collisions#readme",
  "dependencies": {
    "rbush": "^3.0.1",
    "sat": "^0.9.0"
  },
  "devDependencies": {
    "@jacekpietal/bouncer.js": "^2.27.1",
    "@types/rbush": "^3.0.0",
    "@types/sat": "^0.0.31",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.3",
    "babel-preset-es2015": "^6.24.1",
    "docdash": "^1.2.0",
    "jest": "^27.3.1",
    "jsdoc": "^3.6.7",
    "pixi-shim": "^2.3.15",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1"
  },
  "editions": [
    {
      "description": "Source + ESNext + Import",
      "entry": "index.js",
      "directory": "source",
      "syntaxes": [
        "javascript",
        "esnext",
        "require",
        "arrows",
        "getset",
        "const",
        "let",
        "classes",
        "defaults",
        "spread",
        "rest",
        "destructuring",
        "template strings"
      ]
    },
    {
      "description": "Compiled + ES2015 + Require",
      "entry": "index.js",
      "directory": "es2015",
      "syntaxes": [
        "javascript",
        "es2015",
        "require"
      ]
    }
  ]
}
