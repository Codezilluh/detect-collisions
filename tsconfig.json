{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "none",
    "outDir": "dist",
    "types": ["rbush", "sat"]
